@model Producto

@{
    ViewData["Title"] = $"Editar {Model.Descripcion}";
}

<h1>Editar @Model.Descripcion</h1>

<form asp-controller="UsandoModelos" asp-action="EditarProducto" method="post">
    <div class="form-group">
        <label for="nombre">Id</label>
        <input asp-for="Id" type="text" class="form-control" id="id" readonly>
    </div>
    <div class="form-group">
        <label for="orden">Orden</label>
        <input asp-for="Orden" type="text" class="form-control" id="orden" readonly>
    </div>

    <div class="form-group">
        <input asp-for="Descripcion" type="text" class="form-control" id="nombre" placeholder="Ingrese el nombre del nuevo producto">
    </div>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input asp-for="Precio" type="number" class="form-control" placeholder="Precio" id="precio">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Agregar</button>
</form>


